<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="137dp"
    android:background="@drawable/card_image"
    android:layout_height="240dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:padding="4dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/trend_image"
                android:layout_width="120dp"
                android:layout_height="116dp"
                android:layout_gravity="center"
                android:src="@drawable/lexivee_image" />

            <TextView
                android:id="@+id/trend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="T shirt"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Seller"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/manufacture_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:text="Joshua"
                    android:textSize="9dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Buyers"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/num_buyers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:text="300"
                    android:textSize="9dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/trend_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:text="This is so amazing product ever been seen before try to buy"
                android:textSize="10dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like_btn"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/like"
                    app:tint="@color/like_it" />

                <TextView
                    android:id="@+id/trend_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:text="1.5 k" />

            </LinearLayout>


        </LinearLayout>

</LinearLayout>